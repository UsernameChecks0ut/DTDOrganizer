@model DTDOrganizer.Models.LibraryViewModel
@{
    ViewBag.Title = "Library";
}
<!-- Navbar -->
<nav class="navbar navbar-light bg-white justify-content-center">
    <form class="form-inline mb-3 ">
        <button class="btn btn-white blib" type="button" onclick="showBooks()">Book Library</button>
        <button class="btn btn-white bcourse" type="button" onclick="showCourses()">Courses</button>
        <button class="btn btn-white odocs" type="button" onclick="showOther()">Other docs</button>
    </form>
</nav>
<!-- Navbar -->
<!-- Book library -->
<div class="container books">
    <div class="row">
        @if (Model.books.Count != 0)
        {
            foreach (var book in Model.books)
            {
                <!-- Book -->
                <div class="col-xl-2 col-md-3 col-sm-3 col-4 mb-4">
                    <div class="card border-0" onclick="window.location.href='description.html'">
                        <a href="~/Library/BookDesc">
                            <img src="@book.imagePath" class="card-img-top shadow rounded">
                            <div class="card-body text-left p-0 pt-2">
                                <div class="card-text text-black-50">@book.title</div>
                            </div>
                        </a>
                    </div>
                </div>
                <!--/Book -->
            }
        }
    </div>
</div>
<!-- /Book library -->
<!-- Courses -->
<div class="container courses">
    <div class="row">

        @if (Model.courses.Count != 0)
        {
            foreach (var course in Model.courses)
            {
                <!-- Course -->
                <div class="col-xl-2 col-md-3 col-sm-3 col-4 mb-4">
                    <div class="card border-0">
                        <a href="@course.link" />
                        <img src="~/Content/Images/Library/onlineCourses.jpg" class="card-img-top shadow rounded" />
                        <div class="card-body text-left p-0 pt-2">
                            <div class="card-text text-black-50">@course.name</div>
                        </div>
                    </div>
                </div>
                <!-- /Course -->
            }}

    </div>
</div>
<!-- /Courses -->
<!-- Other docs -->
<div class="container otherdocs">
    <div class="row">
        @if (Model.documents.Count != 0)
        {
            foreach (var document in Model.documents)
            {
                <!-- Document -->
                <div class="col-xl-2 col-md-3 col-sm-3 col-4 mb-4">
                    <div class="card border-0">
                        <a href="../@document.path" />
                        <img src="~/Content/Images/Library/docs.jpg" class="card-img-top shadow rounded" />
                        <div class="card-body text-left p-0 pt-2">
                            <div class="card-text text-black-50">@document.name</div>
                        </div>
                    </div>
                </div>
                <!-- /Document -->
            }
        }
