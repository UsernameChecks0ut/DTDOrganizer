@model IEnumerable<DTDOrganizer.Models.ResourcesAdminModel>
    <div class="row" style="height:100%; margin-bottom:10vh;">
        @foreach (var item in Model)
        {
            <div class="mt-2 mb-4 col-sm-12 col-md-6 col-lg-4">
                <div class="card shadow ">
                    <img src="@Url.Content(item.Image)" class="mt-2 ml-2 card-img-top" style="width:200px; height:200px;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description.</p>
                        <button id="@item.Id" onClick="location.href='@Url.Action("RequestAnItem", "Resources", new { id = item.Id })'" class="btn btn-outline-dark">Request</button>
                        @*It should be displayable only for HR*@
                        <button id="@item.Id" onClick="deleteAnItem(this)" class="btn btn-danger btn-outline-dark">Delete</button>
                    </div>
                </div>
            </div>
        }
    </div>