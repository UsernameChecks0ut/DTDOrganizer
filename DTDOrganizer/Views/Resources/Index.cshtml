@{
    ViewBag.Title = "Resources";
}
<table id="ResourcesNavigationTable" style="width: 100%; height:10vh; margin-bottom:10vh;">
    <tbody>
        <tr>
            <td id="OfficeButton" style="height:100%; vertical-align:bottom; text-align:center">Office</td>
            <td id="WorkMaterials" style="height:100%; vertical-align:bottom; text-align:center">Work Materials</td>
            <td id="UtilitiesButton" style="height:100%; vertical-align:bottom; text-align:center">Utilities</td>
            <td id="RequestsButton" style="height:100%; vertical-align:bottom; text-align:center">Requests</td>
        </tr>
    </tbody>
</table>
<div id ="ResourcesContent"></div>
<script>
    $(function () {
        adjustNavigation();
        $('#OfficeButton').click();
    });

    function requestAnItem(button) {
        debugger;
        var id = $(button).attr("id");
        $.ajax({
            url: '/Resources/RequestAnItem',
            type: 'GET',
            data: { id: id},
          success: function(data) {
             $('#ResourcesContent').html(data);
          }
        });
    }

    function adjustNavigation() {
        var parts = $("#ResourcesNavigationTable").children('tbody').children('tr').children('td').length;
        $("#ResourcesNavigationTable tbody tr td").each(function () {
            $(this).css("width", "" + 100 / parts + "%");
        });
    }

    $('#OfficeButton').on("click", function () {  
        $.ajax({
          url: '/Resources/Office',
          dataType: 'html',
          success: function(data) {
             $('#ResourcesContent').html(data);
          }
        });
    });
    $('#WorkMaterials').on("click", function () {  
        $.ajax({
          url: '/Resources/WorkMaterials',
          dataType: 'html',
          success: function(data) {
             $('#ResourcesContent').html(data);
          }
        });
    });
    $("#UtilitiesButton").on("click", function () { 
         $.ajax({
          url: '/Resources/Utilities',
          dataType: 'html',
          success: function(data) {
             $('#ResourcesContent').html(data);
          }
        });
    });  
    $("#RequestsButton").on("click", function () { 
         $.ajax({
          url: '/Resources/Requests',
          dataType: 'html',
          success: function(data) {
             $('#ResourcesContent').html(data);
          }
        }); 
    });    
</script>

