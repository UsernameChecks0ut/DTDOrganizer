@{
    ViewBag.Title = "Resources";
}
<!-- Navbar -->
<nav class="navbar navbar-light bg-white justify-content-center">
    <form class="form-inline mb-3 ">
        <button id="OfficeButton" class="btn btn-white" type="button">Office</button>
        <button id="WorkMaterials" class="btn btn-white" type="button">Work Materials</button>
        <button id="UtilitiesButton" class="btn btn-white" type="button">Utilities</button>
        <button id="RequestsButton" class="btn btn-white" type="button">Requests</button>
    </form>
</nav>
<!-- Navbar -->
<div id="ResourcesContent"></div>
<script>
    $(function () {
        //adjustNavigation();
        $('#OfficeButton').click();
    });

    function requestAnItem(button) {
        var id = $(button).attr("id");
        $.ajax({
            url: '/Resources/RequestAnItem',
            type: 'GET',
            data: { id: id },
            success: function (data) {
                $('#ResourcesContent').html(data);
            }
        });
    }

    //function adjustNavigation() {
